extends base
block content
  div.reconstructions-table-wrapper
    div#reconstructions-table
     div.search-sort
      input.search(placeholder="Auto-Search")
      | &nbsp;&nbsp;&nbsp;Page:&nbsp;
      select#pagination
      | &nbsp;of 
      span.total-pages
      div.sort-wrapper
        | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Sort By:
        button.sort.sort-form(data-sort="form") Form
        button.sort.sort-level(data-sort="level") Level
        button.sort.sort-gloss(data-sort="gloss") Gloss
      table#reconstructions-table-main
        thead
          for item in headerInfo
            th.table-heading= item
        tbody.list
          //for item in data
            tr
              td.form= item.Reconstruction_Form
              td.level= item.Reconstruction_Level
              td.gloss= item.Reconstruction_Gloss
              td.notes= item.Reconstruction_Notes
  script(src="http://cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js" type="text/javascript")
  script(type="text/javascript" src="/js/reconstructionsTable.js")
  script(type="text/javascript").
    $(document).ready(function(){
      //get data from pug
      var _globalData = !{JSON.stringify(data).replace(/<\//g, '<\\/')}
      populateReconstructionsTable(_globalData);
      reconstructionsTableSort();
    });
    
    
     
                